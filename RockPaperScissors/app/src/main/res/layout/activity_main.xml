<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="example.com.rockpaperscissors.MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock-Paper
                -Scissors"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/playRPS"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Play RPS"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:background="@drawable/main_menu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="playRPS" />

        <Button
            android:id="@+id/playMJB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Play MJB"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:background="@drawable/main_menu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="playMJB" />

        <Button
            android:id="@+id/setLife"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Life Setting"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:background="@drawable/main_menu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="setLife" />

        <Button
            android:id="@+id/gamble"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Gamble"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:background="@drawable/main_menu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="Gamble" />

        <Button
            android:id="@+id/rank"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Ranking"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:background="@drawable/main_menu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="showRanking" />

    </LinearLayout>

    <Button
        android:id="@+id/quit"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="quit"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:background="@drawable/main_menu"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="200dp"
        android:layout_width="150dp"
        android:layout_below="@+id/linearLayout"
        android:onClick="quit" />

</RelativeLayout>
