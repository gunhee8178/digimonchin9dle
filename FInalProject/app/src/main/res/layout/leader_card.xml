<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/flag_image"
        android:background="@drawable/anonymous"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:padding="8dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/flag_image" >

        <TextView
            android:id="@+id/place_string"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank: "/>


        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/place_string"
            android:layout_toRightOf="@+id/place_string"/>

        <TextView
            android:id="@+id/country_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/place_string"
            android:text="Name: "/>


        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/country_string"
            android:layout_toRightOf="@+id/country_string"/>

        <TextView
            android:id="@+id/rank_string"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_string"
            android:text="Record: "/>


        <TextView
            android:id="@+id/rank_name"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rank_string"
            android:layout_toRightOf="@+id/rank_string"/>


    </RelativeLayout>

</RelativeLayout>