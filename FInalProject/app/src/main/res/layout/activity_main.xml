<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.ryan.finalproject.MainActivity">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:background="@drawable/title"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:background="@drawable/title2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Local Play"
        android:id="@+id/localPlay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Network Play"
        android:id="@+id/networkPlay"
        android:layout_below="@+id/localPlay"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Leaderboard"
        android:id="@+id/leaderboard"
        android:layout_below="@+id/networkPlay"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
